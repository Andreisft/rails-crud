<html lang="en">
  <body>
    <div class="container">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Priority</td>
          </tr>
        </thead>
      <tbody>
          <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.priority %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </body>
</html>
